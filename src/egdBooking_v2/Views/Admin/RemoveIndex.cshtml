@model IList<ApplicationUser>

@{
    ViewBag.title = Resources.Remove;
}

<h2>@Resources.Remove</h2>

@using (Html.BeginForm("RemoveConfirm", "Admin", FormMethod.Get, new { @class = "form-inline" }))
{
    <input type="hidden" name="lang" value="@ViewBag.lang" />
    <select class="form-control" name="id">
        @foreach (var item in Model.OrderBy(u => u.Email))
        {
            <option value="@item.Id">@item.UserName</option>
        }
    </select>
    <input type="submit" value="@Resources.Remove" class="btn btn-primary" />
}
<br />
@Html.ActionLink(Resources.Cancel, "Index", "Admin", new { lang = ViewBag.lang }, null)