@using egdbooking_v2.Models
@model ForgotPasswordViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@Resources.ManageYourAccount</h1>
<p>@Resources.ManageAccountDescription</p>

<div class="wb-tabs update-hash">
    <div class="tabpanels">
        <details id="ajout-add">
            <summary>@Resources.Register</summary>
            <h2>@Resources.Register</h2>
            <p>@Resources.RegistrationDescription</p>
        </details>
        <details id="oubli-forgot">
            <summary>@Resources.ForgotPassword</summary>
            <h2>@Resources.ForgotPassword</h2>
            <p>@Resources.IfForgotPassword</p>
            <p>@Resources.IfNoEmailAccess</p>
        </details>
    </div>
</div>

<h2>@Resources.BookSpace</h2>

<ul>
    <li>@Html.ActionLink(@Resources.SignInToBookSpace, "Index", "Home", new { lang = ViewBag.lang })</li>
</ul>

<h2>@Resources.MoreInformation</h2>

<ul>
    <li><a href="http://www.tpsgc-pwgsc.gc.ca/biens-property/cse-egd/index-eng.html">@Resources.LearnMore</a></li>
    <li><a href="http://www.tpsgc-pwgsc.gc.ca/biens-property/cse-egd/avis-notices-eng.html">@Resources.ImportantNotices</a></li>
    <li><a href="http://www.tpsgc-pwgsc.gc.ca/biens-property/cse-egd/cn-cu-eng.html">@Resources.Contact</a></li>
</ul>


