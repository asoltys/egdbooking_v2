@model IEnumerable<egdbooking_v2.Models.Company>

@{
    ViewBag.title = Resources.Edit;
}

<h2>@Resources.Edit</h2>

@using (Html.BeginForm("Edit", "Companies", FormMethod.Get, new { @class = "form-inline" }))
{
    <input type="hidden" name="lang" value="@ViewBag.lang" />
    <select class="form-control" name="id">
        @foreach (var item in Model)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
    <input type="submit" value="@Resources.Edit" class="btn btn-primary" />
}
<br />
@Html.ActionLink(Resources.Cancel, "Menu", "Admin", new { lang = ViewBag.lang }, null)