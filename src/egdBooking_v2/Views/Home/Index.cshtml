@using egdbooking_v2.Models
@model LoginViewModel

@{
    if (ViewBag.lang == "fr")
    {
        Layout = "~/Views/Shared/_WETLayoutFra.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_WETLayoutEng.cshtml";
    }
    ViewBag.Title = "Home Page";
}

@section lastwrite
    {
        @System.IO.File.GetLastWriteTime(System.IO.Path.GetFullPath(this.Path.TrimStart(new char[] { '/' }))).ToString(Resources.ShortDate)
    }

@section pagedetails
    {
        <div class="col-sm-3 mrgn-tp-sm pull-right">
            <div class="wb-share" data-wb-share='{"lnkClass": "btn btn-default btn-block"}'></div>
        </div>
    }

<h1 id="wb-cont">TBD</h1>

<div class="span-4">

    <br />
    <p>TBD</p>
    <p style="border: solid 1px gray; padding: 4px"><strong>TBD</strong><br />TBD</p>
    
    <h2>TBD</h2>

    <ul>
        <li>Jump to login by clicking here</li>
        <li>Jump to bookings by clicking here</li>
        <li>Jump to information by clicking here</li>
    </ul>

    <!-- Div so link above can jump to this point (login) -->
    <div id="login"></div>
    <h2>Login Header</h2>

    <!-- Div so link above can jump to this point (bookings) -->
    <div id="bookings"></div>
    <h2>Bookings Header</h2>
    <div class="row">
        <div class="col-md-8">
            <section id="bookingsform">
                @using (Html.BeginForm("Index", "Bookings"))
                {
                        <fieldset>
                        <div class="form-group">
                            <label for="startdate">Start date<span class="datepicker-format"> (<abbr title="Four digits year, dash, two digits month, dash, two digits day">YYYY-MM-DD</abbr>)</span></label>
                            <input class="form-control" type="date" id="startdate" name="startdate" />
                        </div>
                        <div class="form-group">
                            <label for="enddate">End date<span class="datepicker-format"> (<abbr title="Four digits year, dash, two digits month, dash, two digits day">YYYY-MM-DD</abbr>)</span></label>
                            <input class="form-control" type="date" id="enddate" name="enddate" />
                        </div>
                        <input type="submit" value="Submit" />
                    </fieldset>
                }
            </section>
        </div>
    </div>
